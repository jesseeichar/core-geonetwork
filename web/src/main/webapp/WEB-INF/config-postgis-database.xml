<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd"> 

	<bean id="main-db" class="jeeves.resources.dbms.ApacheDBCPool">
		<constructor-arg>
			<map>
				<entry key="user" value="www-data"/>
				<entry key="password" value="www-data"/>
				<entry key="driver" value="org.postgis.DriverWrapper"/>
				<entry key="url" value="jdbc:postgresql_postGIS://localhost:5432/geonetwork"/>
				<entry key="poolSize" value="10"/>
				<entry key="validationQuery" value="SELECT 1"/>
			</map>
		</constructor-arg>
	</bean>
</beans>